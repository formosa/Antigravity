{
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        ".venv": true,
        "**/__pycache__": true
    },
    "search.exclude": {
        ".venv": true
    },
    "editor.rulers": [
        80
    ],
    "editor.formatOnSave": true,
    "[python]": {
        "editor.defaultFormatter": "ms-python.python",
        "editor.formatOnSave": true
    },
    "[restructuredtext]": {
        "editor.wordWrap": "wordWrapColumn",
        "editor.wordWrapColumn": 80
    },
    // 1. CRITICAL: Force the IDE to use the standard text editor ("default")
    // instead of the proprietary "Antigravity Form View" for these files.
    "workbench.editorAssociations": {
        "**/.agent/rules/**/*.md": "default",
        "**/.agent/tools/**/*.md": "default",
        "**/.agent/workflows/**/*.md": "default",
        "**/.agent/personas/**/*.mdc": "default"
    },
    // 2. Ensure they are treated as standard Markdown for syntax highlighting
    // (Do NOT use 'antigravity-markdown' here, as that may re-trigger the GUI)
    "files.associations": {
        "**/.agent/**/*.md": "markdown",
        "**/.agent/**/*.mdc": "markdown"
    }
}
